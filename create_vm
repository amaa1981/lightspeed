---
- name: Create a vm with linux
  hosts: localhost
  connection: local
  gather_facts: false
  tasks:
    - name: Create a vm with linux
      openstack.cloud.server:
        state: present
        name: ansible-test-vm
        image: Ubuntu-20.04-LTS
        flavor: m1.small
        key_name: "{{ _key_name_ }}"
        security_groups: default
        network: default
        auto_ip: true
        timeout: 200
        wait: true